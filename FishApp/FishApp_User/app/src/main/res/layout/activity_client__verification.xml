<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorAccent">

    <ScrollView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/logoandtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip">

                <ImageView
                    android:id="@+id/clients"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5.0dip"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/text"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clients"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:text=""
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoandtext"
                android:layout_marginTop="20.0dip"
                android:padding="10.0dip">

                <EditText
                    android:id="@+id/clientid"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border1"
                    android:hint="Enter Client ID"
                    android:padding="5.0dip"
                    android:textColor="#ff000000" />

                <Button
                    android:id="@+id/verify"
                    android:layout_width="100.0dip"
                    android:layout_height="35.0dip"
                    android:layout_below="@+id/clientid"
                    android:layout_alignRight="@+id/clientid"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/roundedcornerbutton"
                    android:text="Verify"
                    android:textColor="#ffffffff" />

                <RelativeLayout
                    android:layout_width="250.0dip"
                    android:layout_height="10.0dip"
                    android:layout_below="@+id/verify" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>