<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5.0dip"
    android:background="@drawable/roundedcornerbackground">

    <TextView
        android:id="@+id/txtgroupid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:text="Order Id : "
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/groupid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_toRightOf="@+id/txtgroupid"
        android:text="100"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/orderdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5.0dip"
        android:text="100"
        android:textColor="#ff000000" />

    <ImageView
        android:id="@+id/dot1"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_below="@+id/txtgroupid"
        android:layerType="software"
        android:src="@drawable/dotted" />

    <com.fishapp.user.MyListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dot1"
        android:layout_marginLeft="70.0dip"
        android:divider="@null"
        android:scrollbars="none" />

    <ImageView
        android:id="@+id/dot2"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_below="@+id/list"
        android:layerType="software"
        android:src="@drawable/dotted" />

    <TableLayout
        android:id="@+id/table1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dot2"
        android:layout_alignParentRight="true">

        <TableRow>

            <TextView
                android:id="@+id/txtdeliverycharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="5.0dip"
                android:text="Delivery Charge : "
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/deliverycharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:layout_margin="5.0dip"
                android:text=""
                android:textColor="#ff000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txttoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="5.0dip"
                android:text="Total : "
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:layout_margin="5.0dip"
                android:text="Total"
                android:textColor="#ff000000" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table1"
        android:layout_margin="5.0dip"
        android:text="Not Active"
        android:textColor="#ff000000"
        android:textSize="18.0dip" />
</RelativeLayout>