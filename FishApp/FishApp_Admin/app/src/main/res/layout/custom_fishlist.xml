<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="@drawable/roundedcornerbackground"
        android:padding="5.0dip">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100.0dip"
            android:layout_height="75dip"
            android:layout_margin="5.0dip"
            android:background="@drawable/nophoto"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/fishid"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/image"
            android:text="Fish ID : "
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/itemname"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fishid"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/image"
            android:text="Nalla Mean"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/qty"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemname"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/image"
            android:text="100"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/unit"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemname"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/qty"
            android:text="1gg0"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/price"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemname"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/unit"
            android:text="100"
            android:textColor="#ff000000" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_below="@+id/price"
            android:layout_alignParentRight="true"
            android:layout_margin="5.0dip"
            android:src="@drawable/delete" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_below="@+id/price"
            android:layout_margin="5.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/delete"
            android:src="@drawable/edit" />

        <com.github.angads25.toggle.widget.LabeledSwitch
            android:id="@+id/stock"
            android:layout_width="120.0dip"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:textSize="14.0sp"
            app:colorBorder="#ff00c4a6"
            app:colorOn="#ff00c4a6"
            app:on="false"
            app:textOff="Out of Stock"
            app:textOn="Stock" />
    </RelativeLayout>
</RelativeLayout>