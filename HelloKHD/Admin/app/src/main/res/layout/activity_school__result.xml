<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School_Result">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/titlebargradiant">


        <ImageView
            android:id="@+id/back"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/text"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/back"
            android:text="Update School Result"
            android:textColor="#000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtschoolcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="School Code"
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/schoolcode"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/txtschoolcode"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/search"
                android:padding="5.0dip" />

               <Button
                   android:id="@+id/search"
                   android:layout_width="100dp"
                   android:layout_height="50dp"
                   android:text="Search"
                   android:layout_margin="5dp"
                   android:layout_below="@+id/txtschoolcode"
                   android:textColor="#fff"
                   android:background="@drawable/roundedcornerbutton"
                   android:layout_alignParentRight="true"
                   />

            <TextView
                android:id="@+id/txtschoolname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="School Name"
                android:layout_below="@+id/schoolcode"
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/schoolname"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/txtschoolname"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:padding="5.0dip" />
            <TextView
                android:id="@+id/txthsgeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="HS General"
                android:layout_below="@+id/schoolname"
                android:textColor="#ff000000" />


            <EditText
                android:id="@+id/hsgeneral"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/txthsgeneral"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:padding="5.0dip" />


            <TextView
                android:id="@+id/txthssgeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="HSS General"
                android:layout_below="@+id/hsgeneral"
                android:textColor="#ff000000" />


            <EditText
                android:id="@+id/hssgeneral"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/txthssgeneral"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:padding="5.0dip" />


            <TextView
                android:id="@+id/txthsarabic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="HSS Arabic"
                android:layout_below="@+id/hssgeneral"
                android:textColor="#ff000000" />


            <EditText
                android:id="@+id/hsarabic"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/txthsarabic"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:padding="5.0dip" />

            <TextView
                android:id="@+id/txthssanskrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="HSS Sanskrit"
                android:layout_below="@+id/hsarabic"
                android:textColor="#ff000000" />


            <EditText
                android:id="@+id/hssanskrit"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/txthssanskrit"
                android:layout_margin="5.0dip"
                android:background="@drawable/the_border1"
                android:maxLines="1"
                android:padding="5.0dip" />


            <Button
                android:id="@+id/update"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/hssanskrit"
                android:layout_margin="5.0dip"
                android:background="@drawable/roundedcornerbutton"
                android:text="Update"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>