<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/text"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/back"
            android:text="Add /Edit Marketting Staff"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtpersonalinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:text="Personal Info"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lytpersonalinfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtpersonalinfo"
                android:layout_margin="5.0dip"
                android:background="@drawable/roundedcornerbackground"
                android:padding="5.0dip">

                <TextView
                    android:id="@+id/txtstaffid"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:text="Code"
                    android:textColor="#ff000000" />

                <EditText
                    android:id="@+id/staffid"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/txtstaffid"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border"
                    android:maxLines="1"
                    android:padding="5.0dip" />

                <TextView
                    android:id="@+id/txtname"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/staffid"
                    android:layout_margin="5.0dip"
                    android:text="Name"
                    android:textColor="#ff000000" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/txtname"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border"
                    android:maxLines="1"
                    android:padding="5.0dip" />

                <TextView
                    android:id="@+id/txtplace"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_margin="5.0dip"
                    android:text="Place"
                    android:textColor="#ff000000" />

                <EditText
                    android:id="@+id/place"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/txtplace"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border"
                    android:maxLines="1"
                    android:padding="5.0dip" />

                <TextView
                    android:id="@+id/txtmobile1"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/place"
                    android:layout_margin="5.0dip"
                    android:text="Mobile 1"
                    android:textColor="#ff000000" />

                <EditText
                    android:id="@+id/mobile1"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/txtmobile1"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border"
                    android:maxLines="1"
                    android:padding="5.0dip" />

                <TextView
                    android:id="@+id/txtmobile2"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mobile1"
                    android:layout_margin="5.0dip"
                    android:text="Mobile 2"
                    android:textColor="#ff000000" />

                <EditText
                    android:id="@+id/mobile2"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_below="@+id/txtmobile2"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/the_border"
                    android:maxLines="1"
                    android:padding="5.0dip" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtphotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lytpersonalinfo"
                android:layout_margin="5.0dip"
                android:text="Photos"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/lytphotos"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtphotos"
                android:layout_margin="5.0dip"
                android:background="@drawable/roundedcornerbackground"
                android:padding="5.0dip">

                <TextView
                    android:id="@+id/txtphoto1"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:text="Proof Photo"
                    android:textColor="#ff000000" />

                <RelativeLayout
                    android:id="@+id/lytphoto1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtphoto1"
                    android:layout_margin="5.0dip">

                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nophoto"
                        android:scaleType="fitCenter" />

                    <ProgressBar
                        android:id="@+id/pb1"
                        style="?android:progressBarStyleLarge"
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip"
                        android:layout_centerInParent="true"
                        android:visibility="invisible" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtphoto2"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lytphoto1"
                    android:layout_margin="5.0dip"
                    android:text="Personal Photo"
                    android:textColor="#ff000000" />

                <RelativeLayout
                    android:id="@+id/lytphoto2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtphoto2"
                    android:layout_margin="5.0dip">

                    <ImageView
                        android:id="@+id/photo2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nophoto"
                        android:scaleType="fitCenter" />

                    <ProgressBar
                        android:id="@+id/pb2"
                        style="?android:progressBarStyleLarge"
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip"
                        android:layout_centerInParent="true"
                        android:visibility="invisible" />
                </RelativeLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/update"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_below="@+id/lytphotos"
                android:layout_margin="5.0dip"
                android:background="@drawable/roundedcornerbutton"
                android:text="Update"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>