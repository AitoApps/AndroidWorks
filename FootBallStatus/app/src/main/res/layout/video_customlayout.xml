<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="#ffffffff">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="Sample"
            android:textColor="#ff000000"
            android:textSize="16.0dip"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/imagelyt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title">

            <ImageView
                android:id="@+id/img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3.0dip"
                android:adjustViewBounds="true"
                android:background="#ffc9c9c9"
                android:minHeight="200.0dip" />

            <ImageView
                android:id="@+id/playicon"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_centerInParent="true"
                android:src="@drawable/img_playocons" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_below="@+id/imagelyt">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:text="Time"
                android:textColor="#ff000000"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/downloadicon"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:src="@drawable/img_download" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/adplaceholder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_margin="5.0dip"
        android:background="#ffffffff"
        android:visibility="gone" />
</RelativeLayout>