<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccc"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/notificationlogo" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/logo"
            android:text="Football Feed Admin"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/uploadlyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornerbackground"
                android:layout_margin="5dp"
                android:padding="10.0dip">

                <Button
                    android:id="@+id/instagramtofacebook"
                    android:layout_width="150dp"
                    android:layout_height="50.0dip"
                    android:layout_margin="10.0dip"
                    android:text="FootBall"
                    android:textColor="#ff000000"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/uplaodtochintha"
                    android:layout_width="150dp"
                    android:layout_height="50.0dip"
                    android:layout_toRightOf="@+id/instagramtofacebook"
                    android:layout_margin="10.0dip"
                    android:text="Upload To App"
                    android:textColor="#ff000000"
                    android:textStyle="bold" />

                  <ImageView
                      android:id="@+id/notifootball"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/notification"
                      android:padding="10dp"
                      android:layout_alignParentRight="true"
                      />



            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/actresslyt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedcornerbackground"
