                    android:textStyle="bold" />

                <Button
                    android:id="@+id/uploaddulqar"
                    android:layout_width="150dp"
                    android:layout_height="50.0dip"
                    android:layout_toRightOf="@+id/dulqar"
                    android:layout_margin="10.0dip"
