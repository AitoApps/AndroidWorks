<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50.0dip"
        android:background="#ffffffff"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/ad_app_icon"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:adjustViewBounds="true"
            android:paddingEnd="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="5.0dip" />

        <TextView
            android:id="@+id/ad_headline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0000ff"
            android:layout_toRightOf="@+id/ad_app_icon"
            android:textSize="16.0sp"
            android:text="Sample"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ad_advertiser"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="dasdasdasd"
            android:layout_below="@+id/ad_headline"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ad_stars"
            style="?android:ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_below="@+id/ad_advertiser"
            android:numStars="5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/ad_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.0dip"
            android:layout_below="@+id/ad_stars"
            android:layout_marginRight="20.0dip"
            android:textSize="12.0sp" />

        <com.google.android.gms.ads.formats.MediaView
            android:id="@+id/ad_media"
            android:layout_width="300.0dip"
            android:layout_height="132.0dip"
            android:layout_below="@+id/ad_body"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:id="@+id/addatribution"
            style="@style/AppTheme.AdAttribution"
            android:layout_below="@+id/ad_media"
            />

        <TextView
            android:id="@+id/ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingEnd="5.0dip"
            android:layout_below="@+id/addatribution"
            android:paddingRight="5.0dip"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/ad_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5.0dip"
            android:paddingLeft="5.0dip"
            android:paddingEnd="5.0dip"
            android:layout_below="@+id/ad_price"
            android:paddingRight="5.0dip"
            android:textSize="12.0sp" />

        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedcornerbutton"
            android:gravity="center"
            android:padding="2.0dip"
            android:layout_below="@+id/ad_store"
            android:textColor="#ffffffff"
            android:textSize="12.0sp" />


    </RelativeLayout>


</com.google.android.gms.ads.formats.UnifiedNativeAdView>