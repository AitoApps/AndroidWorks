<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5.0dip"
    android:background="@drawable/roundedcornerbackground3"
    android:orientation="vertical"
    android:padding="5.0dip">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/the_border1"
        android:padding="5.0dip">

        <TextView
            android:id="@+id/itemname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nalla Mean"
            android:textColor="#ff000000"
            android:textSize="14.0dip" />

        <ImageView
            android:id="@+id/image"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_below="@+id/itemname"
            android:layout_margin="5.0dip"
            android:background="@drawable/noproductphoto"
            android:scaleType="fitCenter" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemname"
            android:layout_margin="5.0dip"
            android:layout_toRightOf="@+id/image"
            android:stretchColumns="*">

            <TableRow android:layout_marginTop="5.0dip">

                <TextView
                    android:id="@+id/txtitemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Price"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/txtitempricedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/itemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="100"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />
            </TableRow>

            <TableRow android:layout_marginTop="5.0dip">

                <TextView
                    android:id="@+id/txtitemqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Qty"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/txtitemtotalqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/itemqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="100"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />
            </TableRow>

            <TableRow android:layout_marginTop="5.0dip">

                <TextView
                    android:id="@+id/txtitemtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Total"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/txtitemtotaldor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=":"
                    android:textColor="#ff000000"
                    android:textSize="12.0dip" />

                <TextView
                    android:id="@+id/itemtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="100"
                    android:textColor="#ff205c14"
                    android:textSize="12.0dip" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/edit"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_below="@+id/table"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_toLeftOf="@+id/delete"
            android:padding="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/editicon" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_below="@+id/table"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="17.0dip"
            android:layout_marginRight="5.0dip"
            android:padding="6.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/delete" />
    </RelativeLayout>
</RelativeLayout>