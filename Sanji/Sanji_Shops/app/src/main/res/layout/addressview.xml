<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/layout" android:background="@drawable/roundedcornerbackground3" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TableLayout android:id="@+id/table" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip" android:stretchColumns="*" android:layout_centerHorizontal="true">
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtplace" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Place : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/place" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtmobile1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mobile 1 : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/mobile1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtmobile2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mobile 2 : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/mobile2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtaddress" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_weight="1.0" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtpincode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pincode : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/pincode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" style="@android:style/TextAppearance.Medium" />
            </TableRow>
            <TableRow android:layout_marginTop="5.0dip">
                <TextView android:textColor="#ff000000" android:gravity="right" android:id="@+id/txtlandmark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Landmark : " style="@android:style/TextAppearance.Medium" />
                <TextView android:textColor="#ff000000" android:id="@+id/landmark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_weight="1.0" style="@android:style/TextAppearance.Medium" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</RelativeLayout>