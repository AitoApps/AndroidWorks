<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="@drawable/clearroundedlayout"
        android:padding="5.0dip">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_margin="5.0dip"
            android:background="@drawable/noproductphoto"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/itemname"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_toRightOf="@+id/image"
            android:text="Nalla Mean"
            android:textColor="#ff000000" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignBottom="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_margin="5.0dip"
            android:src="@drawable/closeicon" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignBottom="@+id/image"
            android:layout_margin="5.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toLeftOf="@+id/delete"
            android:src="@drawable/edit" />

        <RelativeLayout
            android:id="@+id/lytchangeorder"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_below="@+id/image"
            android:layout_margin="10.0dip">

            <TextView
                android:id="@+id/txtitemorder1"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:text="Listing Order"
                android:textColor="#ff000000" />

            <EditText
                android:id="@+id/itemorder1"
                android:layout_width="70.0dip"
                android:layout_height="40.0dip"
                android:layout_margin="5.0dip"
                android:layout_toRightOf="@+id/txtitemorder1"
                android:background="@drawable/the_border1"
                android:inputType="number"
                android:padding="5.0dip"
                android:textColor="#ff000000" />

            <Button
                android:id="@+id/setorder"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_centerVertical="true"
                android:layout_margin="5.0dip"
                android:layout_toRightOf="@+id/itemorder1"
                android:background="@drawable/roundedcornerbutton"
                android:text="SET"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>