<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/img_titlebargradiant"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/img_back" />
        <TextView
            android:id="@+id/viewtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Video Splitter"
            android:layout_toRightOf="@+id/back"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/adView1"
        >
        <RelativeLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/addvideo"
            android:background="#dedede"
            >
            <ImageView
                android:id="@+id/emptydownloads"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/img_iconvidocut"
                android:layout_centerInParent="true"
                />
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/sharetools"
                android:divider="@null"
                android:scrollbars="none"
                android:background="@null"
                ></ListView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:id="@+id/sharetools"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                >
                <ImageView
                    android:id="@+id/save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="7dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_orangedown"
                    />
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="7dp"
                    android:layout_toRightOf="@+id/save"
                    android:src="@drawable/img_orangeshare"
                    />
            </RelativeLayout>
        </RelativeLayout>
          <Button
              android:id="@+id/addvideo"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_alignParentBottom="true"
              android:layout_margin="5dp"
              android:textSize="18dp"
              android:textColor="#fff"
              android:text="Add Video"
              android:background="@drawable/round_cornerbtn"
              />

    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        ads:adSize="BANNER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adUnitId="ca-app-pub-2432830627480060/7170085147"
        android:visibility="visible"
        />

</RelativeLayout>