<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_background4"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
         <VideoView
             android:id="@+id/video"
             android:layout_width="wrap_content"
             android:layout_height="250dp"
             android:layout_centerHorizontal="true"

             />
          <ImageView
              android:id="@+id/videoplay"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:src="@drawable/img_iconplay"
              android:padding="10dp"
              android:visibility="invisible"
              android:layout_alignLeft="@+id/video"
              android:layout_margin="5dp"
              />
        <ImageView
            android:id="@+id/pausevideo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_iconpause"
            android:layout_alignLeft="@+id/video"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:padding="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/layout"
        android:background="@drawable/round_backgorund2"
        >
        <ImageView
            android:id="@+id/shareicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:src="@drawable/img_orangeshare"
            android:layout_toLeftOf="@+id/downloadicon"
            android:padding="7dp"
            />
        <ImageView
            android:id="@+id/downloadicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_orangedown"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>
