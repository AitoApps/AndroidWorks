<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/round_backgorund2"
        >
        <TextView
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#000000"
            style="@android:style/TextAppearance.Medium"
            android:text="FB Download Quality"
            />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grpradio"
            android:layout_below="@+id/msg1"
             >
            <RadioButton
                android:id="@+id/qlty_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:layout_margin="5dp"
                android:checked="false"
                android:textColor="#000000"
                style="@android:style/TextAppearance.Medium"/>
            <RadioButton
                android:id="@+id/qlty_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:layout_margin="5dp"
                android:checked="false"
                android:textColor="#000000"
                style="@android:style/TextAppearance.Medium"/>
        </RadioGroup>
        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            style="@android:style/TextAppearance.Medium"
            android:text="Save"
            android:background="@drawable/round_cornerbtn"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/grpradio"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            />
    </RelativeLayout>
   
</RelativeLayout>
