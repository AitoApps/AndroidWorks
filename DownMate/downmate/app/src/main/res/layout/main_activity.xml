<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/img_titlebargradiant"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_homelogo"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/logo"
            android:layout_margin="5dp"
            android:textSize="18dp"
            android:text="DownMate"
            android:textColor="#fff"
            />
        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_iconshare"
            android:layout_toLeftOf="@+id/about"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />

        <ImageView
            android:id="@+id/about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_iconabout"
            android:layout_toLeftOf="@+id/downloads"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            />
         <ImageView
             android:id="@+id/downloads"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:src="@drawable/img_icondownload"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="5dp"
             android:padding="5dp"
             />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_above="@+id/adView1"
        android:scrollbars="none"
        >
    <TableLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:background="#d6d6d6"
        >

        <TableRow
            android:layout_marginTop="2dp"
            >
            <RelativeLayout
                android:id="@+id/tiktok"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginRight="1dp"
                >


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_tiktok"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sharechat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginLeft="1dp"
                >


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_sharechat"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_marginTop="2dp"
            >

            <RelativeLayout
                android:id="@+id/instagram"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginRight="1dp"
                >


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_inst_open"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginLeft="1dp"
                >


                <ImageView
                    android:id="@+id/imgfb"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_fbopen"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />

                <ImageView
                    android:id="@+id/qulitysettings_fb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/imgfb"
                    android:src="@drawable/img_settingsfb"
                    android:padding="5dp"
                    />

            </RelativeLayout>

        </TableRow>


        <TableRow
            android:layout_marginTop="2dp"
            >

            <RelativeLayout
                android:id="@+id/whatsappstatus"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginRight="1dp"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_whatsapp_open"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/videosplitter"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginLeft="1dp"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_splitterwpvid"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>

        </TableRow>


        <TableRow
            android:layout_marginTop="2dp"
            >

            <RelativeLayout
                android:id="@+id/videotomp3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginRight="1dp"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/videotomp3"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/unknownchat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="@drawable/bg"
                android:layout_marginLeft="1dp"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_unknownchat"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    />


            </RelativeLayout>

        </TableRow>



    </TableLayout>



    </ScrollView>
    <ImageView
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_help"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/header"
        android:padding="5dp"
        />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2432830627480060/7170085147" />
</RelativeLayout>