<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WP_StatusSaver">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/img_titlebargradiant"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/img_back" />
        <TextView
            android:id="@+id/viewtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Your Whatsapp Status"
            android:layout_toRightOf="@+id/back"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/wp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_logo_whatsapp"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/wpbus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_whatsapplogo"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/adView1"
        >
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:background="@null"
            ></ListView>
        <TextView
            android:id="@+id/emptydownloads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:text="Whatsapp status will be enlisted here once you view them and you can download them here"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20dp"
            />
        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="70dp"
            android:visibility="invisible"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        ads:adSize="BANNER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adUnitId="ca-app-pub-2432830627480060/7170085147"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        />

</RelativeLayout>