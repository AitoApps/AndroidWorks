<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/round_background"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
             <RelativeLayout
                 android:id="@+id/wp_layout"
                 android:layout_width="match_parent"
                 android:layout_height="50dp">
                 <ImageView
                     android:id="@+id/wp"
                     android:layout_width="40dp"
                     android:layout_marginLeft="5dp"
                     android:layout_height="40dp"
                     android:src="@drawable/img_logo_whatsapp"
                     android:layout_centerVertical="true"
                     />
                    <TextView
                        android:id="@+id/wp_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="Whatsapp"
                        android:layout_toRightOf="@+id/wp"
                        style="@android:style/TextAppearance.Medium"
                        />
             </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/wp_layout"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/fb_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view1"
                >
                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="40dp"
                    android:layout_centerVertical="true"
                    android:layout_height="40dp"
                    android:src="@drawable/im_logofb"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/fb_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/facebook"
                    android:layout_marginLeft="5dp"
                    android:text="Whatsapp"
                    style="@android:style/TextAppearance.Medium"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_below="@+id/fb_layout"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/wpbus_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/view2"
                >
                <ImageView
                    android:id="@+id/wpbus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img_whatsapplogo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:id="@+id/wpbus_txt"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/wpbus"
                    android:layout_marginLeft="5dp"
                    android:text="Whatsapp Bhussinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/TextAppearance.Medium"
                    />
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
