<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/lytfooter">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <ScrollView
            android:id="@+id/content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/textandlogo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100.0dip"
                        android:layout_height="100.0dip"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5.0dip"
                        android:src="@drawable/applogo" />

                    <TextView
                        android:id="@+id/text"
                        style="@android:style/TextAppearance.Large"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo"
                        android:layout_marginTop="5.0dip"
                        android:gravity="center"
                        android:lineSpacingExtra="3.0sp"
                        android:text="Status Chinthakal"
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textandlogo"
                    android:layout_marginTop="30.0dip">

                    <TextView
                        android:id="@+id/developed"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Developed By"
                        android:textColor="#ffffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dvlpdby"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/developed"
                        android:layout_marginTop="20.0dip"
                        android:gravity="center"
                        android:text="Salman Ponnani"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/appver"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/dvlpdby"
                        android:layout_marginTop="20.0dip"
                        android:gravity="center"
                        android:text="Ver 1.0"
                        android:textColor="#ffffffff" />

                    <TextView
                        android:id="@+id/cpyright"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/appver"
                        android:layout_marginTop="15.0dip"
                        android:gravity="center"
                        android:text="This app is copy protected"
                        android:textColor="#ffffffff" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lytfooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/contact1"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="Suggestions , Whatsapp Please"
            android:textColor="#ffffffff" />

        <RelativeLayout
            android:id="@+id/lytcontact"
            android:layout_width="fill_parent"
            android:layout_height="75.0dip"
            android:layout_below="@+id/contact1"
            android:background="@drawable/roundedcornerbackground1">

            <TextView
                android:id="@+id/contact"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="+91 9037631786"
                android:textColor="#ff2b4884"
                android:textSize="30.0dip"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>