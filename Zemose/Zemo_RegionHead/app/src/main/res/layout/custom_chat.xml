<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:layout_margin="5.0dip"
    android:background="@drawable/roundedlayout"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_centerVertical="true"
        android:background="@drawable/nouser"
        app:civ_border_color="#ff000000"
        app:civ_border_width="2.0dip" />

    <ImageView
        android:id="@+id/medal"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_alignRight="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:src="@drawable/medal" />

    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:layout_toLeftOf="@+id/lycount"
        android:layout_toRightOf="@+id/image"
        android:text="Sample Message"
        android:textColor="#ff000000"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@+id/lycount"
        android:layout_toRightOf="@+id/image"
        android:text="Sample Message"
        android:textColor="#ff000000"
        android:textSize="14.0dip" />

    <RelativeLayout
        android:id="@+id/lycount"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gree_roundedlayout">

        <TextView
            android:id="@+id/txtcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</RelativeLayout>