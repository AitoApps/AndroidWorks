<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header" android:background="@drawable/titlebargradiant" android:layout_width="match_parent" android:layout_height="50dp">
        <ImageView android:id="@+id/back" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:src="@drawable/back" android:scaleType="fitXY" android:layout_centerVertical="true"/>
        <TextView android:textColor="#000" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Registration" android:layout_toRightOf="@+id/back" android:layout_centerVertical="true" style="@style/TextAppearance.Medium"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/content" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/header">
        <EditText android:id="@+id/username" android:background="@drawable/the_border1" android:padding="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="5dp" android:hint="Username"/>
        <EditText android:id="@+id/password" android:background="@drawable/the_border1" android:padding="5dp" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="5dp" android:hint="Password" android:layout_below="@+id/username"/>
        <Button android:textColor="#000" android:id="@+id/login" android:background="@drawable/button" android:layout_width="100dp" android:layout_height="50dp" android:layout_margin="5dp" android:text="Login" android:layout_below="@+id/password" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
