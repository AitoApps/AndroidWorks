<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" style="@style/cb_relative_layout">
    <WebView android:id="@+id/webview" android:background="@android:color/transparent" android:focusable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/r_payu_review_order" android:visibility="visible" android:layout_height="30dp" android:layout_alignParentBottom="true" style="@style/cb_relative_layout">
        <View android:id="@+id/v_payu_review_line" android:layout_alignParentTop="true" style="@style/cb_horizontal_line"/>
        <TextView android:textSize="@dimen/cb_sixteenScaled" android:textColor="@color/cb_textColor" android:gravity="center" android:layout_width="match_parent" android:layout_marginTop="@dimen/cb_eight" android:layout_marginBottom="@dimen/cb_eight" android:drawableTop="@drawable/slider" android:layout_below="@+id/v_payu_review_line" style="@style/cb_text_view"/>
        <TextView android:textStyle="bold" android:textColor="@color/cb_blue_button" android:id="@+id/t_payu_review_order" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cb_review_order" android:layout_below="@+id/v_payu_review_line" android:layout_alignParentRight="true" android:elevation="10dp"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/magic_retry_container" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    <ProgressBar android:id="@+id/cb_progressbar" android:layout_width="match_parent" android:layout_height="4dp" android:max="100" android:progress="50" android:progressDrawable="@drawable/cb_progress_bar" android:layout_alignParentTop="true" style="@style/Widget.ProgressBar.Horizontal"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/trans_overlay" android:background="@drawable/background_drawable" style="@style/cb_linear_layout"/>
    <View android:id="@+id/cb_blank_overlay" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" style="@style/cb_linear_layout">
        <ImageView android:layout_gravity="center" android:id="@+id/arrow" android:contentDescription="@string/cb_top_arrow" style="@style/cb_image_view"/>
        <FrameLayout android:id="@+id/help_view" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <RelativeLayout android:orientation="vertical" android:id="@+id/view" android:visibility="gone" android:layout_height="wrap_content" style="@style/cb_relative_layout">
            <View android:id="@+id/v_payu_cb_horizontal_line" android:layout_alignParentTop="true" style="@style/cb_horizontal_line"/>
            <RelativeLayout android:layout_height="30dp" android:layout_below="@+id/v_payu_cb_horizontal_line" style="@style/cb_linear_layout">
                <TextView android:textSize="@dimen/cb_sixteenScaled" android:textColor="@color/cb_textColor" android:gravity="center" android:layout_width="match_parent" android:layout_marginTop="@dimen/cb_eight" android:layout_marginBottom="@dimen/cb_eight" android:drawableTop="@drawable/slider" style="@style/cb_text_view"/>
                <TextView android:textStyle="bold" android:textColor="@color/cb_blue_button" android:id="@+id/t_payu_review_order_cb" android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cb_review_order" android:layout_alignParentRight="true" android:elevation="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/payu_review_order" android:background="@android:color/transparent" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
