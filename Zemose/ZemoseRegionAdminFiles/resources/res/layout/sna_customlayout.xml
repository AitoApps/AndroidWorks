<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/layout" android:background="@drawable/roundedlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <ImageView android:id="@+id/image" android:background="@drawable/noimage" android:layout_width="60dp" android:layout_height="60dp" android:layout_centerVertical="true"/>
    <TextView android:textSize="16dp" android:textColor="#000" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Name" android:layout_toLeftOf="@+id/lycount" android:layout_toRightOf="@+id/image"/>
    <TextView android:textSize="14dp" android:textColor="#000" android:id="@+id/date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="Date" android:layout_toRightOf="@+id/image" android:layout_below="@+id/name"/>
    <TextView android:textSize="14dp" android:textColor="#000" android:id="@+id/customer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="Customer" android:layout_toRightOf="@+id/image" android:layout_below="@+id/date"/>
</RelativeLayout>
