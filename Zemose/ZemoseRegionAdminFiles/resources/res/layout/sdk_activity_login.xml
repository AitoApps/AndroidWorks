<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="fill" android:orientation="vertical" android:id="@+id/plastic" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"/>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/logo" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/header" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/imageView2" android:paddingTop="20dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/logo_color" android:contentDescription="@string/payumoney_image" android:scaleX="2" android:scaleY="2"/>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="18sp" android:textColor="#000000" android:paddingTop="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/slogan"/>
    </LinearLayout>
    <RelativeLayout android:orientation="vertical" android:id="@+id/login_options" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/logo">
        <ImageView android:id="@+id/verifying_logo" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7sp" android:src="@drawable/security_icons" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:contentDescription="@string/verified_by_visa_image"/>
        <Button android:textColor="#ffffff" android:id="@+id/login" android:background="@drawable/button1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/twelve" android:text="@string/login" android:layout_above="@+id/verifying_logo"/>
        <LinearLayout android:gravity="0" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12sp">
            <AutoCompleteTextView android:theme="@style/EditTextLineColor" android:id="@+id/email" android:background="@drawable/payumoney_edit_bg" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/twelve" android:hint="@string/email_phone_no" android:ems="10" android:drawableLeft="@drawable/message_icon" android:inputType="textEmailAddress"/>
            <EditText android:theme="@style/EditTextLineColor" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/password" android:background="@drawable/payumoney_edit_bg" android:paddingLeft="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/twelve" android:hint="@string/otp_password" android:ems="10" android:drawableLeft="@drawable/password" android:inputType="textPassword"/>
            <TextView android:textColor="@color/primary_green" android:gravity="center_horizontal" android:id="@+id/opt_message" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/twelve" android:text="@string/otp_is_send_to_mobile_number"/>
            <TextView android:textColor="@color/primary_green" android:gravity="center_horizontal" android:id="@+id/text_view_resend_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/resend_otp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
