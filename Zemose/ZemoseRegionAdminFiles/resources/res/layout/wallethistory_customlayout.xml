<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools=" http://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/layout" android:background="@drawable/roundedlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="#000" android:id="@+id/name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Shop Name" android:layout_toLeftOf="@+id/amount"/>
    <TextView android:textSize="14dp" android:textColor="#000" android:id="@+id/date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="Date" android:layout_toLeftOf="@+id/amount" android:layout_below="@+id/name"/>
    <TextView android:textSize="14dp" android:textColor="#000" android:id="@+id/mode" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="Mode" android:layout_toLeftOf="@+id/amount" android:layout_below="@+id/date"/>
    <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="#000" android:id="@+id/amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp" android:text="100" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
