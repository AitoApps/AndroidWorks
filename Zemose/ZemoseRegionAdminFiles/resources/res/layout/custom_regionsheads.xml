<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/roundedlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <RelativeLayout android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/headname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Head Name"/>
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="User Name" android:layout_below="@+id/headname"/>
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Password" android:layout_below="@+id/username"/>
        <ImageView android:id="@+id/delete" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:src="@drawable/closeicon" android:layout_below="@+id/password" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/edit" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="10dp" android:layout_marginRight="30dp" android:layout_marginBottom="10dp" android:src="@drawable/edit" android:layout_toLeftOf="@+id/delete" android:layout_below="@+id/password"/>
    </RelativeLayout>
</RelativeLayout>
