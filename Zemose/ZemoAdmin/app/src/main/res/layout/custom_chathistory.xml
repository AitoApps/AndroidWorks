<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/userchat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/roundedlayout"
        android:padding="5dp">

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Message"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/chattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="2:64 PM"
            android:textColor="#000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adminchat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/roundedlayout_admin"
        android:padding="5dp">

        <TextView
            android:id="@+id/adminmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Message"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/adminchattime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminmsg"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="2:64 PM"
            android:textColor="#000" />
    </RelativeLayout>
</RelativeLayout>
