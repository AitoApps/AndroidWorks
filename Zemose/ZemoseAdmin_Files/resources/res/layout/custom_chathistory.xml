<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <RelativeLayout android:id="@+id/userchat" android:background="@drawable/roundedlayout" android:padding="5dp" android:layout_width="250dp" android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView android:textSize="16dp" android:textColor="#000" android:id="@+id/msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sample Message"/>
        <TextView android:textColor="#000" android:id="@+id/chattime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="2:64 PM" android:layout_below="@+id/msg" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/adminchat" android:background="@drawable/roundedlayout_admin" android:padding="5dp" android:layout_width="250dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:layout_alignParentRight="true">
        <TextView android:textSize="16dp" android:textColor="#000" android:id="@+id/adminmsg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sample Message"/>
        <TextView android:textColor="#000" android:id="@+id/adminchattime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="2:64 PM" android:layout_below="@+id/adminmsg" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>
