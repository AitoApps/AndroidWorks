<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools=" http://schemas.android.com/tools" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/layout" android:background="@drawable/roundedlayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
    <RelativeLayout android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/image" android:background="@drawable/noimage" android:layout_width="80dp" android:layout_height="80dp" android:layout_margin="5dp"/>
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/shopname" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Shop Name" android:layout_toRightOf="@+id/image"/>
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/place" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Shop Name" android:layout_toRightOf="@+id/image" android:layout_below="@+id/shopname"/>
        <TextView android:textSize="18dp" android:textColor="#000" android:id="@+id/contact" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="9037637186" android:layout_toRightOf="@+id/image" android:layout_below="@+id/place"/>
        <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#000" android:id="@+id/walletamount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Rs 100" android:layout_below="@+id/contact"/>
        <ImageView android:id="@+id/call" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="5dp" android:src="@drawable/call" android:layout_below="@+id/contact" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/location" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:src="@drawable/location" android:layout_toLeftOf="@+id/call" android:layout_below="@+id/contact"/>
    </RelativeLayout>
</RelativeLayout>
