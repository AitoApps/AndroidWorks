<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Lock_Layout">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/img_header">

        <ImageView
            android:id="@+id/moveback"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_back" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/moveback"
            android:text="Locked"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/adslyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.0dip"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Thazhe Kanunna pole Cheyyuka .. 65000 rupayude Loan nedan thankalkk kazyuo"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <FrameLayout
                android:id="@+id/adplaceholder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/roundedcornerbackground"
                android:visibility="visible" />

             <TextView
                 android:id="@+id/timeintervelll"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text=""
                 android:textColor="#fff"
                 android:gravity="center_horizontal"
                 android:textSize="50dp"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/adplaceholder"
                 />

              <Button
                  android:id="@+id/payment"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:background="@drawable/img_header"
                  android:layout_below="@+id/timeintervelll"
                  android:layout_marginTop="50dp"
                  android:text="Payment"
                  android:textColor="#fff"
                  android:textSize="20dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>