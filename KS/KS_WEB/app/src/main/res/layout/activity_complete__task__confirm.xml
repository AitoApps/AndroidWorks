<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complete_Task_Confirm">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/img_header">

        <ImageView
            android:id="@+id/moveback"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/moveback"
            android:text="EC Recharge"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/locklyt"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:background="@drawable/bg"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/pymenttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30.0dip"
                android:gravity="center"
                android:text="sahgshag"
                android:padding="5dp"
                android:textColor="#ffffffff"
                android:textSize="20.0dip" />

            <TableLayout
                android:id="@+id/table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pymenttext"
                android:layout_centerHorizontal="true"
                android:layout_margin="10.0dip"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5.0dip"
                        android:text="Rechrgae Date"
                        android:textColor="#ffffffff"
                        android:textSize="18.0dip" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:layout_margin="5.0dip"
                        android:background="@drawable/the_border1"
                        android:hint=""
                        android:padding="5.0dip"
                        android:textColor="#ff000000" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/verify"
                android:layout_width="100.0dip"
                android:layout_height="40.0dip"
                android:layout_below="@+id/table"
                android:layout_alignRight="@+id/table"
                android:layout_margin="5.0dip"
                android:background="@drawable/btn_paymnt"
                android:text="Verify"
                android:textColor="#ffffffff"
                android:textSize="18.0dip" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>