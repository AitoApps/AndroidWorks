<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer">

        <ImageView
            android:id="@+id/moveback"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_margin="5.0dip"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_back" />

        <ScrollView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/logowithtext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100.0dip"
                        android:layout_height="100.0dip"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5.0dip"
                        app:srcCompat="@drawable/img_logo" />

                    <TextView
                        android:id="@+id/text"
                        style="@android:style/TextAppearance.Large"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo"
                        android:layout_marginTop="5.0dip"
                        android:gravity="center"
                        android:lineSpacingExtra="3.0sp"
                        android:text=""
                        android:textColor="#ffffffff" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logowithtext"
                    android:layout_marginTop="30.0dip">

                    <TextView
                        android:id="@+id/developed"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Developed By"
                        android:textColor="#ffffffff"
                        android:textSize="30.0dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/devpedby"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/developed"
                        android:layout_marginTop="20.0dip"
                        android:gravity="center"
                        android:text="Salman Ponnani"
                        android:textColor="#ffffffff"
                        android:textSize="30.0dip" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/devpedby"
                        android:layout_marginTop="20.0dip"
                        android:gravity="center"
                        android:text="Ver 1.0"
                        android:textColor="#ffffffff"
                        android:textSize="18.0dip" />

                    <TextView
                        android:id="@+id/copyright"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/version"
                        android:layout_marginTop="15.0dip"
                        android:gravity="center"
                        android:text="This software is copy protected"
                        android:textColor="#ffffffff"
                        android:textSize="25.0dip" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/wponly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip"
            android:text="Whatsapp Only"
            android:textColor="#ffffffff"
            android:textSize="20.0dip"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/lytcontact"
            android:layout_width="fill_parent"
            android:layout_height="75.0dip"
            android:layout_below="@+id/wponly"
            android:background="#ff1f7e3c">

            <TextView
                android:id="@+id/contactme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="+91 9048801231"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>