<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App_Details">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/title_bar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/text"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@+id/back"
            android:text="App Details"
            android:textColor="#fff" />

         <ImageView
             android:id="@+id/clearall"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_alignParentRight="true"
             android:layout_margin="5dp"
             android:src="@drawable/clearal"
             android:layout_centerVertical="true"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            >
            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip"
                android:background="@drawable/roundedcornerbackground"
                android:padding="5.0dip">


                <TextView
                    android:id="@+id/txtappname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Name"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/appname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_below="@+id/txtappname"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />

                <TextView
                    android:id="@+id/txtappurl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App URL"
                    android:layout_below="@+id/appname"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/appurl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_below="@+id/txtappurl"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />

                <TextView
                    android:id="@+id/txtopenhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Head"
                    android:layout_below="@+id/appurl"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/openhead"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:gravity="top|left"
                    android:layout_below="@+id/txtopenhead"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />


                <TextView
                    android:id="@+id/txtopendisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Discription"
                    android:layout_below="@+id/openhead"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/opendisc"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:gravity="top|left"
                    android:layout_below="@+id/txtopendisc"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />


                <TextView
                    android:id="@+id/txtdisctitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disc Title"
                    android:layout_below="@+id/opendisc"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/disctitle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:gravity="top|left"
                    android:layout_below="@+id/txtdisctitle"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />


                <TextView
                    android:id="@+id/txtdiscfooter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disc Footer"
                    android:layout_below="@+id/disctitle"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:textColor="#000"
                    />

                <EditText
                    android:id="@+id/discfooter"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:gravity="top|left"
                    android:layout_below="@+id/txtdiscfooter"
                    android:layout_margin="5dp"
                    android:background="@drawable/the_border1"
                    />

                <TextView
                    android:id="@+id/txtphoto1"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discfooter"
                    android:layout_margin="5.0dip"
                    android:text="App Photo"
                    android:textColor="#ff000000" />

                 <RelativeLayout
                    android:id="@+id/lytphoto1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtphoto1"
                    android:layout_margin="5.0dip">

                    <ImageView
                        android:id="@+id/photo1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/nophoto"
                        android:scaleType="fitCenter" />

                    <ProgressBar
                        android:id="@+id/pb1"
                        style="?android:progressBarStyleLarge"
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip"
                        android:layout_centerInParent="true"
                        android:visibility="invisible" />
                </RelativeLayout>

                <Button
                    android:id="@+id/next"
                    android:layout_width="100.0dip"
                    android:layout_height="40.0dip"
                    android:layout_below="@+id/lytphoto1"
                    android:layout_margin="5.0dip"
                    android:layout_alignRight="@+id/discfooter"
                    android:background="@drawable/roundedcornerbutton"
                    android:text="Next"
                    android:textColor="#ffffffff" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>