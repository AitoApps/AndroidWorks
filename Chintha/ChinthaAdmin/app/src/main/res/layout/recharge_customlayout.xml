<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5.0dip"
        android:background="@drawable/roundedcornerbackground">

        <RelativeLayout
            android:id="@+id/datawindow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtoperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dip"
                        android:text="Amount :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/operator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dip"
                        android:text="40"
                        android:textColor="#ffd90d15"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:minHeight="60.0dip">

                    <TextView
                        android:id="@+id/txtcoupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5.0dip"
                        android:text="Time :"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/coupon"
                        android:layout_width="150.0dip"
                        android:layout_height="wrap_content"
                        android:padding="5.0dip"
                        android:singleLine="false"
                        android:text="10:30:PM"
                        android:textColor="#ff228108"
                        android:textSize="18.0dip"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datawindow"
            android:layout_margin="5.0dip">

            <ImageView
                android:id="@+id/verify"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_margin="5.0dip"
                android:src="@drawable/varifiedicon" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25.0dip"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/closeicon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sample"
            android:layout_width="fill_parent"
            android:layout_height="5.0dip"
            android:layout_below="@+id/status" />
    </RelativeLayout>
</RelativeLayout>