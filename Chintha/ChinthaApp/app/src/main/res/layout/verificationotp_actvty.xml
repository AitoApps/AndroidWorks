<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?colorPrimary">

    <ScrollView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/help"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/img_helps" />

            <RelativeLayout
                android:id="@+id/logtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip">

                <ImageView
                    android:id="@+id/applogo"
                    android:layout_width="100.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5.0dip"
                    app:srcCompat="@drawable/applogo" />

                <TextView
                    android:id="@+id/text"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/applogo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dip"
                    android:text=""
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/details"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logtext"
                android:layout_marginTop="20.0dip"
                android:padding="10.0dip">

                <EditText
                    android:id="@+id/vericode"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/textborder"
                    android:hint="Verification Code"
                    android:padding="5.0dip"
                    android:textColor="#ff000000" />

                <Button
                    android:id="@+id/verify"
                    android:layout_width="100.0dip"
                    android:layout_height="35.0dip"
                    android:layout_below="@+id/vericode"
                    android:layout_alignRight="@+id/vericode"
                    android:layout_marginTop="10.0dip"
                    android:background="@drawable/roundedbtnbutton"
                    android:text="Verify"
                    android:textColor="#ffffffff" />

                <TextView
                    android:id="@+id/txtmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/verify"
                    android:layout_marginTop="10.0dip"
                    android:lineSpacingExtra="3.0sp"
                    android:padding="5.0dip"
                    android:text=" * By default your mobile number is hidden"
                    android:textColor="#ffffffff"
                    android:textSize="16.0dip" />

                <RelativeLayout
                    android:layout_width="250.0dip"
                    android:layout_height="10.0dip"
                    android:layout_below="@+id/verify" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>