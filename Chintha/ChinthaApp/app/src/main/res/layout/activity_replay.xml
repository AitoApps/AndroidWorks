<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/titlebars">

        <ImageView
            android:id="@+id/moveback"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img_moveback" />

        <TextView
            android:id="@+id/text"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toLeftOf="@+id/options"
            android:layout_toRightOf="@+id/moveback"
            android:paddingTop="5.0dip"
            android:text="Reply"
            android:textColor="#ffffffff" />

        <ImageView
            android:id="@+id/options"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:padding="12.0dip"
            app:srcCompat="@drawable/option" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titlebar"
        android:background="@drawable/roundedbg3">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView2"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:visibility="visible"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2432830627480060/7328046981" />

        <RelativeLayout
            android:id="@+id/commentmaster"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adView2">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:background="@drawable/img_noimage" />

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_toLeftOf="@+id/post_time"
                android:layout_toRightOf="@+id/img"
                android:text="Sample"
                android:textColor="#ff000000"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <com.suhi_chintha.ExtendTextView
                android:id="@+id/chintha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/img"
                android:lineSpacingExtra="3.0sp"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingBottom="5.0dip"
                android:text="nall vakkukal nall janmammanu jeevith avzhiyil"
                android:textColor="#ff000000"
                android:textSize="15.0dip" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutloadmore"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_below="@+id/commentmaster"
            android:background="#ffffffff"
            android:visibility="gone">

            <ImageView
                android:id="@+id/reload"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                app:srcCompat="@drawable/reloadcomment" />

            <TextView
                android:id="@+id/loadmore"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toLeftOf="@+id/progress_pb1"
                android:layout_toRightOf="@+id/reload"
                android:background="#ffffffff"
                android:padding="3.0dip"
                android:text="Load More..." />

            <ProgressBar
                android:id="@+id/progress_pb1"
                style="?android:progressBarStyleLarge"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2.0dip"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/hori_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/layoutloadmore"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/commentslyt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/bottom_lyt"
            android:layout_below="@+id/hori_line">

            <ImageView
                android:id="@+id/emptydata"
                android:layout_width="150.0dip"
                android:layout_height="150.0dip"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/img_noreply"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/nonets"
                android:layout_width="150.0dip"
                android:layout_height="150.0dip"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/img_nonet"
                android:visibility="gone" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lotty_loadin"
                android:layout_width="250.0dip"
                android:layout_height="250.0dip"
                android:layout_centerInParent="true"
                android:visibility="gone"
                emojicon:lottie_autoPlay="true"
                emojicon:lottie_fileName="loading.json"
                emojicon:lottie_loop="true" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:divider="@null"
                android:scrollbars="none" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_lyt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5.0dip"
            android:layout_toLeftOf="@+id/lytaddstatus">

            <RelativeLayout
                android:id="@+id/messagepart"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundebg2">

                <ImageView
                    android:id="@+id/emoji"
                    android:layout_width="48.0dip"
                    android:layout_height="48.0dip"
                    android:baselineAlignBottom="true"
                    android:padding="10.0dip"
                    app:srcCompat="@drawable/emojies" />

                <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
                    android:id="@+id/reply"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/emoji"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:fadeScrollbars="false"
                    android:hint="Type a reply"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:minLines="1"
                    android:padding="5.0dip"
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                   />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytaddstatus"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="5.0dip">

            <ImageView
                android:id="@+id/addreplay"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/img_addstatus"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>