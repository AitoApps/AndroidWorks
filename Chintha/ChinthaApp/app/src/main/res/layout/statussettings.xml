<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/roundebg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5.0dip">

        <CheckBox
            android:id="@+id/commentblock"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:padding="5.0dip"
            android:text="Comment Block "
            android:textColor="#ff000000" />

        <View
            android:id="@+id/hori_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_below="@+id/commentblock"
            android:layout_marginTop="3.0dip"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txtshortstatus"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hori_line"
            android:layout_margin="5.0dip"
            android:paddingTop="5.0dip"
            android:text="Your Status"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/shortstatus"
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:layout_below="@+id/txtshortstatus"
            android:layout_margin="5.0dip"
            android:layout_marginLeft="5.0dip"
            android:background="@drawable/textborder"
            android:gravity="center|left|top"
            android:maxLength="35"
            android:padding="5.0dip" />

        <Button
            android:id="@+id/rpt_update"
            android:layout_width="100.0dip"
            android:layout_height="35.0dip"
            android:layout_below="@+id/shortstatus"
            android:layout_alignRight="@+id/shortstatus"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/roundedbtnbutton"
            android:text="Update"
            android:textColor="#ffffffff" />
    </RelativeLayout>
</RelativeLayout>